
config samba
	option workgroup 'WORKGROUP'
	option description 'Samba on OpenWrt'
	option charset 'UTF-8'
	option name 'OP'
	option homes '1'
	option macos '1'

config sambashare
	option name 'win'
	option path '/mnt/sdb1'
	option read_only 'no'
	option force_root '1'
	option guest_ok 'yes'
	option create_mask '0777'

config sambashare
	option name 'mac'
	option path '/mnt/sdb2'
	option read_only 'no'
	option force_root '1'
	option guest_ok 'yes'
	option create_mask '0777'

